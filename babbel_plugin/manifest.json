{
    "manifest_version": 3,
    "name": "Babbel Translation Plugin",
    "version": "1.0",
    "description": "A plugin to translate selected text",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts/content.js"]
        }
    ]
}
